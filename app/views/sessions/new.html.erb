<h1> Log In</h1>

<% @errors && @errors.each do |e| %>
    <li><%= e %> </li>
<%end%>

<%= form_tag login_path do %>

      <%= label_tag(:username, "Username:") %>
      <%= text_field_tag(:username) %>

      <%= label_tag(:password, "Password:") %>
      <%= password_field_tag(:password) %>

      <%= submit_tag("Log In") %>
  <% end %> 

  <p>Log In <%= link_to ' with Facebook', '/auth/facebook'%>.</p>