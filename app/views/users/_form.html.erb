<h1> Please create an account</h1>

<%user_errors && user_errors.each do |e| %>
    <li><%=e%></li>
<%end%>

<%= form_for @user, url: signup_path(@user) do |f| %>
    <%= f.label "Username" %>
    <%=f.text_field :username %>
    <%=f.label "Password" %>
    <%=f.password_field :password %>
    <%=f.label "Confirm Password" %>
    <%=f.password_field :password_confirmation %>
    <%=f.submit "Sign Up" %>
    
<%end%>

<%= link_to "Sign Up with Google.", '/auth/google_oauth2'%><br><br>
<%= link_to "Sign Up with Facebook.", '/auth/facebook'%>